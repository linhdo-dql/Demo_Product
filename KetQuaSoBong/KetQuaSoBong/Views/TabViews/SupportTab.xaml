<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="KetQuaSoBong.Views.TabViews.SupportTab"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customView="clr-namespace:KetQuaSoBong.Views.CustomViews"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    BackgroundColor="{StaticResource placeholderColor}">
    <ContentPage.Resources>
        <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_fb.png" x:Key="Facebook" />
        <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_zalo.png" x:Key="Zalo" />
        <xct:ImageResource Id="KetQuaSoBong.Resources.Images.ic_telegram.png" x:Key="Telegram" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label
                    Margin="10"
                    FontFamily="RBo"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Liên hệ với chúng tôi qua:" />
                <Grid
                    ColumnDefinitions="*,*,*"
                    ColumnSpacing="0"
                    HeightRequest="80">
                    <StackLayout
                        Grid.Column="0"
                        HorizontalOptions="Center"
                        Spacing="0"
                        VerticalOptions="Center">
                        <Image
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            Source="{StaticResource Facebook}"
                            WidthRequest="60" />
                        <Label
                            FontFamily="RBo"
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="Fanpage"
                            TextColor="Black" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <StackLayout
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        Spacing="0"
                        VerticalOptions="Center">
                        <Image
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            Source="{StaticResource Zalo}"
                            WidthRequest="60" />
                        <Label
                            FontFamily="RBo"
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="Zalo"
                            TextColor="Black" />
                    </StackLayout>

                    <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="0"
                             Grid.Column="2">
                        <Image Source="{StaticResource Telegram}"
                           HeightRequest="60"
                           WidthRequest="60"
                               Aspect="AspectFit"
                           HorizontalOptions="Center" />
                        <Label Text="Telegram"
                           FontSize="16"
                           TextColor="Black"
                           FontFamily="RBo"
                           HorizontalOptions="Center" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped2"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </Grid>
                <Label
                    Margin="10"
                    FontFamily="R"
                    HorizontalOptions="Center"
                    Text="Hoặc gửi thư cho chúng tôi:"
                    TextColor="Black" />
                <StackLayout>
                    <StackLayout>
                        <Label
                           FontFamily="RBo"
                           FontSize="14"
                           Margin="10,0,0,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Tên người dùng: " />
                                    <Span Text="*" TextColor="Red" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame HeightRequest="50"
                           Padding="10,0"
                           BorderColor="Black"
                           Margin="10,0"
                           HasShadow="False">
                            <customView:CustomEntry Placeholder="Nhập tên người dùng...."
                                                FontSize="14">
                            </customView:CustomEntry>
                        </Frame>
                    </StackLayout>
                    <StackLayout>
                        <Label
                           FontFamily="RBo"
                           FontSize="14"
                           Margin="10,0,0,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Tên đăng nhập: " />
                                    <Span Text="*" TextColor="Red" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame HeightRequest="50"
                           Padding="10,0"
                           BorderColor="Black"
                           Margin="10,0"
                           HasShadow="False">
                            <customView:CustomEntry Placeholder="Nhập tên đăng nhập của bạn...."
                                                FontSize="14">
                            </customView:CustomEntry>
                        </Frame>
                    </StackLayout>
                    <StackLayout>
                        <Label
                            Margin="10,0,0,0"
                            FontFamily="RBo"
                            FontSize="14">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Số điện thoại: " />
                                    <Span Text="*" TextColor="Red" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame HeightRequest="50"
                           Padding="10,0"
                           BorderColor="Black"
                           Margin="10,0"
                           HasShadow="False">
                            <customView:CustomEntry Placeholder="Nhập số điện thoại của bạn...."
                                                FontSize="14">
                            </customView:CustomEntry>
                        </Frame>
                    </StackLayout>
                    <StackLayout>
                        <Label
                            Margin="10,0,0,0"
                            FontFamily="RBo"
                            FontSize="14">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Email: " />
                                    <Span Text="*" TextColor="Red" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame
                            Margin="10,0"
                            Padding="10,0"
                            BorderColor="Black"
                            HasShadow="False"
                            HeightRequest="50">
                            <customView:CustomEntry FontSize="14" Placeholder="Nhập email của bạn...." />
                        </Frame>
                    </StackLayout>

                    <StackLayout>
                        <Label
                            Margin="10,0,0,0"
                            FontFamily="RBo"
                            FontSize="14">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Góp ý của bạn: " />
                                    <Span Text="*" TextColor="Red" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame
                            Margin="10,0"
                            Padding="10,0"
                            BorderColor="Black"
                            HasShadow="False"
                            HeightRequest="100">
                            <customView:CustomEditor FontSize="14" Placeholder="Nhập tên tài khoản...." />
                        </Frame>
                    </StackLayout>
                </StackLayout>
                <Frame HeightRequest="50"
                           Padding="10,0"
                       BackgroundColor="{StaticResource primaryColor}"
                           Margin="10,0,10,20"
                           HasShadow="False">
                    <Label
                        Margin="10,0,0,0"
                        FontFamily="RBo"
                        FontSize="16"
                        HorizontalOptions="Center"
                        TextColor="White"
                        VerticalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Gửi " />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SendSupport}"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>