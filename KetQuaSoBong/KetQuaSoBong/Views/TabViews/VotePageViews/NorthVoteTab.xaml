<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="KetQuaSoBong.Views.VotePageViews.NorthVoteTab"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:md="clr-namespace:KetQuaSoBong.Models"
    xmlns:viewModels="clr-namespace:KetQuaSoBong.ViewModels.NumberVoted"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:DataType="viewModels:NumberVotedVM">
    <ContentView.Resources />
    <ContentView.Content>

        <Grid>

            <StackLayout IsVisible="{Binding IsVisibleResult}">
                <Label HorizontalTextAlignment="Center"

                    Text="HÃY DỰ ĐOÁN 2 CON SỐ"
                              FontSize="16"
                              TextColor="{StaticResource primaryColor}"
                              FontFamily="RBo" />

                <Frame
                    Margin="0,10,0,10"
                    Padding="10"
                    BackgroundColor="{StaticResource placeholderColor}"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="360">

                    <CollectionView
                        x:Name="ListLottery"
                        ItemSizingStrategy="MeasureAllItems"
                        ItemsSource="{Binding Numbers}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                HorizontalItemSpacing="2"
                                Orientation="Vertical"
                                Span="10"
                                VerticalItemSpacing="9" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Button
                                    x:Name="LotteryBall"
                                    Margin="1.1"
                                    BackgroundColor="White"
                                    BorderColor="Black"
                                    BorderWidth="0.5"
                                    ClassId="0"
                                    Command="{Binding BindingContext.SelectCommand, Source={x:Reference ListLottery}}"
                                    CommandParameter="{x:Reference LotteryBall}"
                                    CornerRadius="25"
                                    FontFamily="RBo"
                                    FontSize="13"
                                    HeightRequest="25"
                                    Text="{Binding .}"
                                    WidthRequest="25">
                                    <Button.Padding>
                                        <Thickness>0</Thickness>
                                    </Button.Padding>
                                    <Button.Triggers>
                                        <Trigger TargetType="Button" Property="ClassId" Value="1">
                                            <Setter Property="BackgroundColor" Value="{StaticResource primaryColor}" />
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BorderWidth" Value="0" />
                                        </Trigger>
                                    </Button.Triggers>
                                </Button>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>
                <Button
                    Margin="0,0,0,15"
                    BackgroundColor="{StaticResource primaryColor}"
                    Command="{Binding ShowHideResultCommand}"
                    CornerRadius="50"
                    FontFamily="RBo"
                    HeightRequest="45"
                    HorizontalOptions="Center"
                    Text="XEM KẾT QUẢ"
                    TextColor="White"
                    WidthRequest="200" />
            </StackLayout>
            <StackLayout IsVisible="{Binding IsVisibleResult, Converter={xct:InvertedBoolConverter}}">
                <Label HorizontalTextAlignment="Center"

                    Text="KẾT QUẢ TỔNG SỐ NGƯỜI CÓ CÙNG DỰ ĐOÁN VỚI BẠN HÔM NAY:"
                              FontSize="16"
                              TextColor="{StaticResource primaryColor}"
                              FontFamily="RBo" />

                <StackLayout BindableLayout.ItemsSource="{Binding ResultVotes}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="md:VoteItem">
                            <Frame
                                Margin="0,0,0,10"
                                Padding="10"
                                BackgroundColor="{StaticResource placeholderColor}"
                                CornerRadius="10"
                                HasShadow="False">
                                <StackLayout Orientation="Horizontal">
                                    <Button
                                        BackgroundColor="{StaticResource primaryColor}"
                                        CornerRadius="25"
                                        FontFamily="RBo"
                                        FontSize="13"
                                        HeightRequest="25"
                                        HorizontalOptions="Start"
                                        Text="{Binding Number}"
                                        TextColor="White"
                                        WidthRequest="25">
                                        <Button.Padding>
                                            <Thickness>0</Thickness>
                                        </Button.Padding>
                                    </Button>
                                    <Label
                                        FontFamily="RBo"
                                        FontSize="16"
                                        HorizontalOptions="EndAndExpand"
                                        Text="{Binding SoLuongBinhChon}"
                                        TextColor="Black"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>

                <Grid ColumnDefinitions="*,*">
                    <Button
                        Grid.Column="0"
                        Margin="0,0,0,15"
                        BackgroundColor="Black"
                        Command="{Binding GoBackCommand}"
                        CornerRadius="40"
                        FontFamily="RBo"
                        HeightRequest="40"
                        HorizontalOptions="Center"
                        Text="QUAY VỀ"
                        TextColor="White"
                        WidthRequest="120" />
                    <Button
                        Grid.Column="1"
                        Margin="0,0,0,15"
                        BackgroundColor="{StaticResource primaryColor}"
                        CornerRadius="40"
                        FontFamily="RBo"
                        HeightRequest="40"
                        HorizontalOptions="Center"
                        Text="CHIA SẺ"
                        TextColor="White"
                        WidthRequest="120" />
                </Grid>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>