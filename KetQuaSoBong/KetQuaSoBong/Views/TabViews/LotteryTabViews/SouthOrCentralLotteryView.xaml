                                            HeightRequest="39"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding TenTinhThanh}"
                                            TextColor="CornflowerBlue"
                                            TextDecorations="Underline"
                                            VerticalTextAlignment="Center" />
                                        <ListView
                                            Grid.Row="1"
                                            IsEnabled="False"
                                            ItemsSource="{Binding LastNum}"
                                            RowHeight="40"
                                            SelectionMode="None"
                                            SeparatorColor="Gray">

                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="x:String">
                                                    <ViewCell>
                                                        <Label
                                                            Padding="10,0,0,0"
                                                            BackgroundColor="White"
                                                            FontFamily="RBo"
                                                            FontSize="16"
                                                            HeightRequest="40"
                                                            HorizontalOptions="Fill"
                                                            HorizontalTextAlignment="Start"
                                                            Text="{Binding .}"
                                                            TextColor="Black"
                                                            VerticalTextAlignment="Center" />
                                                    </ViewCell>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Grid>
            </StackLayout>
            <Frame
                Margin="0,10,0,0"
                Padding="0"
                BackgroundColor="{StaticResource primaryColor}"
                BorderColor="Transparent"
                CornerRadius="15"
                HasShadow="False"
                HeightRequest="40"
                HorizontalOptions="Center"
                IsVisible="{Binding IsButtonVisible}"
                VerticalOptions="Center"
                WidthRequest="150">
                <StackLayout
                    Margin="10,0,0,0"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    VerticalOptions="Center">
                    <Label
                        FontFamily="RBo"
                        Text="Mở rộng"
                        TextColor="White">
                        <Label.Triggers>
                            <DataTrigger
                                Binding="{Binding IsShowMore}"
                                TargetType="Label"
                                Value="True">
                                <Setter Property="Text" Value="Thu gọn" />
                                <Setter Property="TextColor" Value="Black" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Image
                        Aspect="AspectFill"
                        HeightRequest="15"
                        Source="{StaticResource IconDown}"
                        WidthRequest="15">
                        <Image.Triggers>
                            <DataTrigger
                                Binding="{Binding IsShowMore}"
                                TargetType="Image"
                                Value="True">
                                <Setter Property="Source" Value="{StaticResource IconUp}" />
                            </DataTrigger>
                        </Image.Triggers>
                    </Image>
                </StackLayout>

                <Frame.Triggers>
                    <DataTrigger
                        Binding="{Binding IsShowMore}"
                        TargetType="Frame"
                        Value="True">
                        <Setter Property="BackgroundColor" Value="White" />
                        <Setter Property="BorderColor" Value="Black" />
                    </DataTrigger>
                </Frame.Triggers>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ShowMoreCommand}" />
                </Frame.GestureRecognizers>
            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>